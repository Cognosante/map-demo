#!/bin/bash
set -eo pipefail
# Set environment variables.
export CI=true
export DEV_MODE=true

cat /usr/libexec/s2i/assemble

bundler install
# Execute original assemble script.
/usr/libexec/s2i/assemble
# Run additional build steps.
cat /usr/libexec/s2i/assemble
echo "Running unit tests ..."
rake test
